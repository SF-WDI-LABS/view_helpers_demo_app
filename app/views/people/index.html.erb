<p id="notice"><%= notice %></p>

<h1>This is the index page for people</h1>

<br>
<br>
<h2> the below table is rendered using:</h2>
<div class='well'><em>@people.each</em></div>
<table class='table'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthdate</th>
      <th>Favorite color</th>
      <th>Gender</th>
      <th>Employed?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.birthdate %></td>
        <td class='<%= person.favorite_color.name unless person.favorite_color.nil? %>'>
          <%= person.favorite_color.name unless person.favorite_color.nil? %>
        </td>
        <td><%= person.gender %></td>
        <td><%= person.employed ? 'Yes' : 'No' %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
